    <div class="centered__column">
              
      <div>
        <h1>Posts en attente d'approbation  
        </h1>
      </div>
      <div>
        <table class="table__users">
          
          <tr>
            <th>titre</th>
            <th>entreprise du  recruteur</th>
            <th>approuver</th>
          </tr>
        <% for (let post of posts) { %>
          <% if(post.active == false) { %>
            <tr>
              <td>
                <%= post.title %>  
              </td> 
              <td>
                <%= post.enterprise %>
              </td>
              <td>
                <form class="product-form" action="/admin/approvePost/<%= post.id %>" method="POST">
                  <button class="btn" type="submit">approuver</button>
                </form>
